FROM debian:bookworm
LABEL maintainer="sinfallas@gmail.com"

WORKDIR /app
RUN apt update && apt-get -y dist-upgrade && apt -y install --no-install-recommends --no-install-suggests apt-transport-https lsb-release ca-certificates git curl nginx libnginx-mod-stream wget nano unzip zip freetds-bin freetds-dev
RUN wget -O /etc/apt/trusted.gpg.d/php.gpg https://packages.sury.org/php/apt.gpg
RUN echo "deb https://packages.sury.org/php/ bookworm main" > /etc/apt/sources.list.d/php.list
RUN apt update && apt -y install --no-install-recommends --no-install-suggests php8.1-sybase php8.1 php8.1-cli php8.1-fpm php8.1-bz2 php8.1-curl php8.1-mbstring php8.1-intl && apt-get clean && rm -rf /var/lib/{apt,dpkg,cache,log}
RUN curl --insecure https://getcomposer.org/composer.phar -o /usr/bin/composer
RUN chmod +x /usr/bin/composer
RUN composer self-update
EXPOSE 80
CMD /usr/sbin/nginx -g "daemon off;"
